
<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">
<div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(bg-3.jpg);">
  <div class="m-grid__item m-grid__item--fluid  m-login__wrapper">
    <div class="m-login__container">
      <!-- <div class="m-login__logo">
        <a href="#">
          <img src="../../../assets/app/media/img//logos/logo-1.png">
        </a>
       </div>-->
      <div class="m-login__signin">
        <div class="m-login__head">
          <h3 class="m-login__title">
            Novo registro
          </h3>
        </div>
        <%= form_for(resource, as: resource_name, :html => {:class => 'm-login__form m-form'}, url: registration_path(resource_name)) do |f| %>
          <div class="form-group m-form__group">
            <%= f.text_field :username, autofocus: true, class: "form-control m-input", placeholder: "Usuario" %>
          </div>
          <div class="form-group m-form__group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control m-input", placeholder: "Email" %>
          </div>
          <div class="form-group m-form__group">
            <%= f.password_field :password, autofocus: true, class: "form-control m-input m-login__form-input--last", placeholder: "Senha" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
          <div class="form-group m-form__group">
            <%= f.password_field :password_confirmation, autofocus: true, class: "form-control m-input m-login__form-input--last", placeholder: "Confirme sua senha" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
          <div class="m-login__form-action">
            <button type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
              Registrar
            </button>
          </div>
        <% end %>
      </div>
      <div class="m-login__account">
        <span class="m-login__account-msg">
          Ja possui uma conta?
        </span>
        &nbsp;&nbsp;
        <a class="m-link m-link--light m-login__account-link">
          <%= link_to "Entre-se", new_session_path(resource_name) %>
        </a>
      </div>
    </div>
  </div>
</div>
