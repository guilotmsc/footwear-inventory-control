
   
<div class="m-content">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <!--begin::Portlet-->
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
              <span class="m-portlet__head-icon m--hide">
                <i class="la la-gear"></i>
              </span>
              <h3 class="m-portlet__head-text">
                Nova venda
              </h3>
            </div>
          </div>
        </div>
        <!--begin::Form-->
        
        <%= form_with(model: sale, local: true, html: {class: "m-form"}) do |form| %> 
          <% if sale.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

              <ul>
              <% sale.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>       
          <div class="m-portlet__body">
            <div class="m-form__section m-form__section--first">
              <div class="form-group m-form__group">
                <label for="example_input_full_name">
                  Data:
                </label>
                <%= form.text_field :date, id: :date, class: "form-control m-input", placeholder: "Selecione a data" %>
              </div>
              <div class="form-group m-form__group">
                <label>
                  Cliente:
                </label>
                <%= form.select(:client_id, Client.all.collect {|u| [u.name, u.id]}, {prompt: 'Selecione o cliente'}, {class: "form-control", required: true}) %>
              </div>
            </div>
          </div>
          <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions">
              <button type="submit" class="btn btn-primary">
                Salvar
              </button>
              <%= link_to sales_path, class: "btn btn-secondary" do %>
                Cancelar
              <% end %>
            </div>
          </div>
        <% end %>  
       </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#date').datepicker({
    format: "yyyy-mm-dd"
  }); 
</script>